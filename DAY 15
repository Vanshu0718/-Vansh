#include <stdio.h>

int main() {
    int T;
    scanf("%d", &T);
    
    while (T--) {
        int N, X;
        scanf("%d %d", &N, &X);
        
        // Calculate minimum number of operations
        // It will be the minimum of X and N - X
        int min_operations = (X < N - X) ? X : (N - X);
        
        printf("%d\n", min_operations);
    }
    
    return 0;
}
